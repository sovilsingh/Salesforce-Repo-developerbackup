<aura:component >
	<lightning:card title="Calculator By Id">
    <aura:set attribute="footer">
        <lightning:buttonGroup>
         <lightning:button label="Add" onclick="{!c.add}"/>
         <lightning:button label="Sub" onclick="{!c.sub}"/>
         <lightning:button label="Mul" onclick="{!c.mul}"/>
            </lightning:buttonGroup>
        </aura:set>
        <lightning:input label="First Number" aura:id="aval"/>
         <lightning:input label="Second Number" aura:id="bval"/>
         <lightning:input label="The Result" aura:id="result"/>
    </lightning:card>
</aura:component>